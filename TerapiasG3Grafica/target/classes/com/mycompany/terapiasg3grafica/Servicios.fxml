            <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Imagenes/IconAtras.png" />
               </image></ImageView>
         </graphic>
         <padding>
            <Insets left="14.0" />
         </padding>
      </Button>
      <Button fx:id="btEliminarServicio" layoutX="339.0" layoutY="352.0" mnemonicParsing="false" text="Eliminar Servicio">
         <effect>
            <DropShadow />
         </effect>
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
